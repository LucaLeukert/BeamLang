// Example demonstrating parse_args<T>(args)

type Args {
    path: String
}

fn main(args: [String]) -> number {
    let parsed = parse_args<Args>(args);

    return match (parsed) {
        case!ok opts => {
            println("Path: ${opts->path}");
            0;
        },
        case!err err => {
            println("Usage: parse_args <path>");
            println(err->message);
            println(err->usage);
            1;
        }
    };
}
