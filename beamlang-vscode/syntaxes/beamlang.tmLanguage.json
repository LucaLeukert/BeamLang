{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BeamLang",
  "scopeName": "source.beamlang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#attributes" },
    { "include": "#literals" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.beamlang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.beamlang",
          "begin": "/\\*\\*",
          "end": "\\*\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.beamlang",
          "match": "\\b(if|else|match|case|async|await|while|loop|for|in|break|continue|return|guard)\\b"
        },
        {
          "name": "keyword.other.beamlang",
          "match": "\\b(fn|type|error|let|mut|import|export|internal|operator|as)\\b"
        },
        {
          "name": "keyword.operator.beamlang",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "storage.modifier.beamlang",
          "match": "\\b(export|internal)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.beamlang",
          "match": "\\b(number|String|char|bool|void|any)\\b"
        },
        {
          "name": "support.type.builtin.beamlang",
          "match": "\\b(Optional|Result|Task|List)\\b"
        },
        {
          "name": "entity.name.type.beamlang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "support.type.generic.beamlang",
          "begin": "<(?![=0-9])",
          "end": ">",
          "patterns": [
            { "include": "#types" },
            { "include": "#punctuation" }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.beamlang",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\s*(<[^>]*>)?\\s*\\()"
        },
        {
          "name": "meta.function.definition.beamlang",
          "begin": "\\b(fn)\\s+([a-z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "keyword.other.beamlang" },
            "2": { "name": "entity.name.function.beamlang" }
          },
          "end": "(?<=\\))|(?=\\{)",
          "patterns": [
            { "include": "#types" },
            { "include": "#punctuation" },
            {
              "name": "variable.parameter.beamlang",
              "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.beamlang",
          "begin": "@(external)",
          "beginCaptures": {
            "1": { "name": "entity.name.function.decorator.beamlang" }
          },
          "end": "\\)",
          "patterns": [
            { "include": "#strings" },
            { "include": "#punctuation" }
          ]
        }
      ]
    },
    "literals": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#booleans" },
        { "include": "#optional-literals" },
        { "include": "#result-literals" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.beamlang",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.beamlang",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            },
            {
              "name": "meta.interpolation.beamlang",
              "begin": "\\$\\{",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.beamlang" }
              },
              "end": "\\}",
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.beamlang" }
              },
              "patterns": [
                { "include": "#keywords" },
                { "include": "#operators" },
                { "include": "#types" },
                { "include": "#functions" },
                { "include": "#literals" },
                { "include": "#punctuation" },
                {
                  "name": "variable.other.beamlang",
                  "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.double.beamlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.beamlang",
              "match": "\\\\(n|r|t|\\\\|\"|')"
            },
            {
              "name": "meta.interpolation.beamlang",
              "begin": "\\$\\{",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.beamlang" }
              },
              "end": "\\}",
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.beamlang" }
              },
              "patterns": [
                { "include": "#keywords" },
                { "include": "#operators" },
                { "include": "#types" },
                { "include": "#functions" },
                { "include": "#literals" },
                { "include": "#punctuation" },
                {
                  "name": "variable.other.beamlang",
                  "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.beamlang",
          "match": "'(\\\\.|[^'\\\\])'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.beamlang",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.beamlang",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.beamlang",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "optional-literals": {
      "patterns": [
        {
          "name": "keyword.operator.optional.beamlang",
          "match": "\\?(some|none)\\b"
        }
      ]
    },
    "result-literals": {
      "patterns": [
        {
          "name": "keyword.operator.result.beamlang",
          "match": "!(ok|err)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.beamlang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.beamlang",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.beamlang",
          "match": "="
        },
        {
          "name": "keyword.operator.method.beamlang",
          "match": "->"
        },
        {
          "name": "keyword.operator.namespace.beamlang",
          "match": "::"
        },
        {
          "name": "keyword.operator.type.beamlang",
          "match": "[?!](?!(some|none|ok|err)\\b)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.beamlang",
          "match": ";"
        },
        {
          "name": "punctuation.separator.beamlang",
          "match": ","
        },
        {
          "name": "punctuation.definition.block.beamlang",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.beamlang",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.array.beamlang",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.accessor.beamlang",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.key-value.beamlang",
          "match": ":"
        }
      ]
    }
  }
}
