{
  "name": "beamlang",
  "displayName": "BeamLang",
  "description": "Syntax highlighting and language server support for BeamLang",
  "version": "1.1.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:beamlang"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "beamlang",
        "aliases": [
          "BeamLang",
          "beamlang"
        ],
        "extensions": [
          ".bl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "beamlang",
        "scopeName": "source.beamlang",
        "path": "./syntaxes/beamlang.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "BeamLang",
      "properties": {
        "beamlang.lsp.serverPath": {
          "type": "string",
          "default": "beamlang",
          "description": "Path to the BeamLang CLI executable."
        },
        "beamlang.lsp.serverArgs": {
          "type": "array",
          "default": [
            "--lsp"
          ],
          "description": "Arguments to start the BeamLang LSP server."
        },
        "beamlang.lsp.serverCwd": {
          "type": "string",
          "default": "",
          "description": "Working directory for launching the BeamLang LSP server (optional)."
        },
        "beamlang.lsp.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the BeamLang LSP server."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
